    }

    /* ---------------------------------- */
    /* SUBMIT BUTTON - Matches the 3D Gradient Look */
    /* ---------------------------------- */
    .submit-btn {
      width: 100%;
      padding: 1.1rem 2rem;
      /* Gradient matches the image look */
      background: linear-gradient(180deg, var(--light-green) 0%, var(--dark-green) 100%);
