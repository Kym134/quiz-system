      margin: 0.75rem 0;
      background: #F5F5F5;
      color: #424242;
      border: 2px solid transparent;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1rem;
      text-align: left;
      transition: all 0.3s ease;
      font-weight: 400;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.08);
    }

    .answer-btn:hover:not(:disabled) {
      background: #E8E8E8;
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(0, 102, 204, 0.15);
    }

    /* Selected state with gradient border */
    .answer-btn.selected {
      background: #FFFFFF;
      color: #003A70;
      font-weight: 600;
      border: 3px solid transparent;
      border-image: linear-gradient(to right, #00B4ED 0%, #89BA17 46%, #FFFFFF 100%) 1;
      box-shadow: 0 4px 12px rgba(0, 180, 237, 0.2);
      padding: 1.5rem 1.75rem;
    }

    .answer-btn:disabled {
      opacity: 0.6;
      cursor: not-allowed;
      transform: none;
    }

    /* Remove radio button completely */
    .answer-radio,
    .answer-radio-inner {
      display: none;
    }

    /* ---------------------------------- */
    /* SUBMIT BUTTON */
    /* ---------------------------------- */
    .submit-btn {
      width: 100%;
      padding: 1rem 2rem;
      background: #0066CC;
