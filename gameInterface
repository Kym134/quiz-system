      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    }

    /* Partial borders - top and bottom center third only */
    .timer::before,
    .timer::after {
      content: '';
      position: absolute;
      left: 33.33%;
      width: 33.33%;
      height: 3px;
      background: #023F88;
    }

    .timer::before {
      top: 0;
      border-radius: 3px 3px 0 0;
    }

    .timer::after {
      bottom: 0;
      border-radius: 0 0 3px 3px;
    }

    .timer.warning {
      color: #FF6B6B;
      background: linear-gradient(135deg, #FFE5E5 0%, #FFF0F0 100%);
      animation: pulse 1s infinite;
    }

    .timer.warning::before,
    .timer.warning::after {
      background: #FF6B6B;
    }

    @keyframes pulse {
      0%, 100% { transform: scale(1); }
      50% { transform: scale(1.02); }
    }

    /* ---------------------------------- */
    /* QUESTION AREA WITH GRADIENT DIVIDER */
    /* ---------------------------------- */
    .question {
      font-size: 1.25rem;
      font-weight: 600;
      color: #003A70;
      margin-bottom: 1.5rem;
      line-height: 1.5;
      padding: 0 3rem;
    }

    /* Gradient divider line */
    .question-divider {
      height: 3px;
      background: linear-gradient(to right, #00B4ED 0%, #89BA17 46%, #FFFFFF 100%);
      margin-bottom: 1.5rem;
      border-radius: 2px;
    }

    /* ---------------------------------- */
    /* ANSWER BUTTONS WITH SHADOWS */
    /* ---------------------------------- */
    .answer-btn {
      display: flex;
      align-items: center;
      gap: 1rem;
      width: 100%;
